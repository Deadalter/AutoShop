extends layout

block content
    h1#main_label Регистрация
    div#auth_block
        p#auth_label Введите регистрационные данные!
        div#auth_div
            form#auth(method='post', action='/reg')
                div.form-group
                    label(for='login') Логин
                    input#login.auth_input.form-control(type='text', name='login', form='auth', placeholder='Введите логин')
                div.form-group
                    label(for='password') Пароль
                    input#password.auth_input.form-control(type='password', name='password', form='auth', placeholder='Введите пароль')
                button#auth_button.btn.btn-default(type='submit', form='auth') Зарегистрироваться!